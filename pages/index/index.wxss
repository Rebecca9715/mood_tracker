.container {
  padding: 40rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

.mood-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
  margin-bottom: 60rpx;
}

.mood-item {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  text-align: center;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  transition: all 0.3s ease;
}

.mood-item.selected {
  background: #7B68EE;
  transform: scale(1.02);
}

.mood-item.selected text {
  color: #fff;
}

.mood-item image {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 20rpx;
}

.mood-item text {
  font-size: 28rpx;
  color: #333;
}

.form-container {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.mood-notes {
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border: 2rpx solid #eee;
  border-radius: 10rpx;
  font-size: 28rpx;
  margin-bottom: 30rpx;
}

.submit-btn {
  background: #7B68EE;
  color: #fff;
  border-radius: 40rpx;
  font-size: 32rpx;
  padding: 20rpx 0;
  width: 100%;
  border: none;
}

.submit-btn:active {
  opacity: 0.8;
}