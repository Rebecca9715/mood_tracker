.container {
  padding: 40rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

.mood-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
  margin-bottom: 60rpx;
}

.mood-item {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  text-align: center;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  transition: all 0.3s ease;
}

.mood-item.selected {
  background: #7B68EE;
  transform: scale(1.02);
}

.mood-item.selected text {
  color: #fff;
}

.mood-item image {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 20rpx;
}

.mood-item text {
  font-size: 28rpx;
  color: #333;
}

.form-container {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.mood-notes {
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border: 2rpx solid #eee;
  border-radius: 10rpx;
  font-size: 28rpx;
  margin-bottom: 30rpx;
}

.submit-btn {
  background: #7B68EE;
  color: #fff;
  border-radius: 40rpx;
  font-size: 32rpx;
  padding: 20rpx 0;
  width: 100%;
  border: none;
}

.submit-btn:active {
  opacity: 0.8;
}


.ai-feedback {
  margin-top: 40rpx;
  padding: 30rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.ai-title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: bold;
}

.ai-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
}

.music-player {
  margin-top: 30rpx;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.music-info {
  flex: 1;
}

.song-name {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  display: block;
}

.song-artist {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
  display: block;
}

.play-btn {
  width: 80rpx !important;
  height: 80rpx !important;
  padding: 0 !important;
  margin: 0 !important;
  display: flex !important;
  align-items: center;
  justify-content: center;
  background: #1890ff !important;
  border-radius: 50% !important;
  transition: all 0.3s ease;
}

.play-btn.playing {
  background: #52c41a !important;
}

.play-icon {
  width: 40rpx;
  height: 40rpx;
}
