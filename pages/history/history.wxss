.container {
  padding: 40rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
}

.header {
  margin-bottom: 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.records-list {
  margin-top: 20rpx;
}

.record-item {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  position: relative;
}

.record-content {
  flex: 1;
  padding: 30rpx;
  min-height: 120rpx;  /* 确保有足够的点击区域 */
}

/* 添加点击反馈效果 */
.record-item:active {
  background: #f9f9f9;
}

.record-actions {
  padding: 20rpx 20rpx 0 0;
}

.delete-btn {
  width: 44rpx !important;
  height: 44rpx !important;
  padding: 0 !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  background: transparent !important;
  border: none !important;
  line-height: 1 !important;
  min-height: unset !important;
}

.delete-btn::after {
  display: none;
}

.delete-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.6;
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.record-mood {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.record-time {
  font-size: 24rpx;
  color: #999;
}

.record-note {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.record-actions {
  display: flex;
  justify-content: flex-end;
  padding: 0 20rpx 20rpx;
}

.delete-btn {
  font-size: 24rpx !important;
  padding: 8rpx 20rpx !important;
  background: #ff4d4f !important;
  color: white !important;
  line-height: 1.5 !important;
  min-height: unset !important;
}

.empty-state {
  text-align: center;
  padding: 100rpx 0;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-state text {
  font-size: 28rpx;
  color: #999;
}